<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:background="@color/gray"
    android:padding="@dimen/margin_small"
    app:cardCornerRadius="@dimen/radios_small"
    app:cardElevation="5dp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recyclerImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="false"
        android:background="@drawable/bottom_sheet_corner"
        android:contentDescription="@string/image_of_Ice_cream"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/radios_small" />

    <TextView
        android:id="@+id/recyclerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/title"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recyclerDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:textColor="#6D4C41"
        android:textSize="14sp"
        android:padding="5dp"
        android:textStyle="bold" />

</LinearLayout>